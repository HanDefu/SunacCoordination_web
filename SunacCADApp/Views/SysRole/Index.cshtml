

@{
    Layout = "~/Views/_LayoutPage.cshtml";
}
@using SunacCADApp.Entity
@using SunacCADApp.Data
<div id="sunac" style="min-width:1024px;">
    <div class="row">
        <div class="col-lg-12 panel-search">
            <span class="panel-item panel-form">
                <input type="text" class="form-control" id="keyword" value="@ViewBag.rolename" />
            </span>
            <span class="panel-item panel-button">
                <button class="btn btn-sunac icon-search" type="button">
                    查询
                </button>
            </span>
            <span class="panel-item panel-button" style="float:right;margin-right:5px;">
                <button class="btn btn-sunac btn-add icon-add-extend" type="button">
                    新增
                </button>
            </span>
        </div>
    </div>
    <div class="row panel-table">
        <table class="table">
            <thead>
                <tr>
                    <th width="60" class="text-center">序号</th>
                    <th width="120" class="text-center">角色名称</th>
                    <th class="text-center">权限</th>
                    <th width="160" class="text-center">创建时间</th>
                    <th width="120" class="text-center">操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (Sys_Role row in ViewBag.List)
                    {
                        <tr>
                            <td class="text-center">@(i++)</td>
                            <td class="text-center"><a title="@row.Role_Remark" style="color:#808080;text-decoration:none;">@row.Role_Name</a> </td>
                            <td class="text-center">
                            @{
                        IList<Sys_Model> models = Sys_ModelDB.GetSysModeByRoleID(row.Id);
                        List<string> strList = new List<string>();
                        foreach (Sys_Model model in models)
                        {
                            if (model.Id == 1 || model.Id == 2 || model.Id == 4)
                            {
                                continue;
                            }
                            else
                            {
                                string modelName = model.Model_Name;
                                strList.Add(modelName);
                            }
                        }
                        string strName = string.Join("、", strList);
                        <span>@strName</span>
                                }
                            </td>
                            <td class="text-center">@row.ModifiedOn.ToString("yyyy-MM-dd")</td>
                            <td align="center" class="operate">

                                @if (row.Id == 22)
                                {
                                    <a href="javascript:void(0)"  title="修改">修改</a>
                                    <b style="font-weight:normal">|</b>
                                    <a title="删除" href="javascript:void(0)">删除</a>
                                }
                                else
                                {
                                    <a href="javascript:void(0)" class="handle-modify" data-id="@row.Id">修改</a>
                                    <b style="font-weight:normal">|</b>
                                    <a data-id="@row.Id" title="删除" class="handle-delete" href="javascript:void(0)">删除</a>
                                }

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(".btn-add").on("click", function () {
            var index = layer.open({
                type: 2,
                skin: 'layer-ext-sunacskin',
                area: ['850px', '570px'],
                title: '新增角色',
                shade:0,
                scrollbar :true,
                content: ['/sysrole/add','yes']
            });
        });



        $(".handle-modify").on("click", function () {
            let id = $(this).data("id");
            var index = layer.open({
                type: 2,
                skin: 'layer-ext-sunacskin',
                area: ['850px', '570px'],
                title: '修改角色',
                shade: 0,
                content: ['/sysrole/edit/' + id,'yes']
            });
        });

        $('.handle-delete').on('click', function () {
            var id = $(this).data('id');
            if (id > 0) {
                layer.confirm('是否需要删除', {
                    btn: ['删除', '取消'],
                    shade: false,
                    icon: 3
                }, function () {
                    $.get("/sysrole/deletehandlebyid", { id: id }, function (data) {
                        if (data.code == 100) {
                            layer.msg(data.message, { icon: 6, shade: false }, function () {
                                location.reload();
                            });
                        } else {
                            layer.alert(data.message, { icon: 2, shade: false });
                        }
                    }, 'json');
                });
            } else {
                layer.msg('非法操作', { icon: 5, shade: false });
            }
        });

        $('.icon-search').on('click', function () {
            let keyword = $('#keyword').val();
            window.location.href = "?keyword=" + keyword;
        })

    })
</script>

