@using SunacCADApp.Entity
@{
    Layout = "~/Views/_LayoutPage.cshtml";
    CadDrawingMaster Drawing = ViewBag.CadDrawingMaster;
    IList<CadDrawingDWG> Dwgs = ViewBag.Dwgs;
    IList<CadDrawingByArea> ByAreas = ViewBag.ByAreas;
    CadDrawingBathroomDetail Bathroom = ViewBag.Bathroom;
    string cadImg = string.Empty;
    if (Dwgs != null) 
    {
       CadDrawingDWG DWG = Dwgs.FirstOrDefault<CadDrawingDWG>();
       cadImg = string.IsNullOrEmpty(DWG.DWGPath) ? "/Content/Css/img/icon-no-image.png" : DWG.DWGPath;
    }
    
}


<div class="row topnav">
    <a>标准部品库</a>
    <i></i>
    <a>卫生间</a>
    <i></i>
    <a>新增</a>
</div>
<div class="row view">
    <div class="left-column">
        <figure>
            <img src="@cadImg" width="238" heigth="200" />
            <p>@Drawing.DrawingName</p>
        </figure>
    </div>
    <div class="mian-column">
        <form name="myform" id="myform">
            <dl>
                <dt><i></i>原型编号:</dt>
                <dd>
                    @Drawing.DrawingCode
                </dd>
            </dl>
            <dl>
                <dt><i></i>原型名称:</dt>
                <dd>
                    @Drawing.DrawingName
                </dd>
            </dl>
            <dl>
                <dt><i></i>原型dwg文件:</dt>
                <dd>

                    @foreach (CadDrawingDWG Dwg in Dwgs)
                    {
                        <span class="upfile">
                            <img src="@Dwg.DWGPath" />
                        </span>
                    }

                </dd>
            </dl>
            <dl>
                <dt><i></i>使用范围:</dt>
                <dd style="width:500px;">
                    <span style="display:block;padding-top:5px;line-height:35px;">
                         @if (Drawing.Scope == 1)
                         {
                               <span class="online-checkbox">
                                   <label>集团</label>
                               </span>
                         }
                        @foreach (CadDrawingByArea Area in ByAreas)
                        {
                            <span class="online-checkbox">
                                <label>@Area.AreaName</label>
                            </span>
                        }

                    </span>

                </dd>
            </dl>
            <dl>
                <dt><i></i>卫生间类型：</dt>
                <dd>
                    @Bathroom.BathroomTypeName
                </dd>
            </dl>
            <dl>
                <dt><i></i>门窗位置：</dt>
                <dd>
                    @Bathroom.BathroomDoorWindowPositionName
                </dd>
            </dl>
            <dl>
                <dt><i></i>模块类型：</dt>
                <dd>
                    <span class="online-checkbox">
                        @{
                            string modelName = Drawing.DynamicType == 1 ? "动态模型" : "静态模型";
                        }
                        @modelName
                       
                    </span>
                   
                </dd>
            </dl>

            @if (Drawing.DynamicType == 1)
            {
                <dl class="dynamic_module">
                    <dt><i></i>短边尺寸范围(mm)：</dt>
                    <dd>
                        @Bathroom.BathroomShortSideMin
                        <i> - </i>
                        @Bathroom.BathroomShortSideMax
                    </dd>
                </dl>
                <dl class="dynamic_module">
                    <dt><i></i>长边尺寸范围(mm)：</dt>
                    <dd>
                         @Bathroom.BathroomLongSizeMin
                        <i> - </i>
                        @Bathroom.BathroomLongSizeMax
                    </dd>
                </dl>
            }
            else if (Drawing.DynamicType == 2)
            {
                <dl class="static_module" style="display:block">
                    <dt><i></i>尺寸(mm)：</dt>
                    <dd>
                        @Bathroom.BathroomShortSideMin
                        <i> - </i>
                        @Bathroom.BathroomShortSideMax
                    </dd>
                </dl>
                <dl class="static_module" style="display:block">
                    <dt><i> </i>马桶尺寸:</dt>
                    <dd>
                        @Bathroom.BathroomClosestoolSizeName
                    </dd>
                </dl>
                <dl class="static_module" style="display:block">
                    <dt><i></i>水盆柜宽：</dt>
                    <dd>
                        @Bathroom.BathroomBasinSizeName
                    </dd>

                    
                </dl>
            }





        </form>
        <div class="row" style="margin-bottom:20px;padding-left:15px;padding-right:30px;">
            <div class="col-md-6 col-sm-6">
                <a class="btn btn-sunac" href="/Bathroom/Edit/@Drawing.Id">编辑</a>
            </div>
            <div class="col-md-6 col-sm-6 text-right">

            </div>
        </div>
    </div>
</div>
