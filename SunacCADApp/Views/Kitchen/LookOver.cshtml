@{
    Layout = "~/Views/_LayoutPage.cshtml";
}
@using SunacCADApp.Entity
@{
    
    CadDrawingMaster Master = ViewBag.CadDrawingMaster;
    CadDrawingKitchenDetail Kitchen = ViewBag.Kitchen;
}
<div class="row topnav">
    <a>标准部品库</a>
    <i></i>
    <a>厨房</a>
    <i></i>
    <a>@Master.DrawingName</a>
</div>
<div class="row view">
    <div class="left-column">
        <figure>
            @{
                IList<CadDrawingDWG> dwgs= ViewBag.Dwgs;
                CadDrawingDWG dwg = dwgs.FirstOrDefault<CadDrawingDWG>();
                string dwg_path = dwg == null ? "/Content/Css/img/icon-no-image.png" : dwg.DWGPath;
                   
            }
            <img src="@dwg_path" width="238" heigth="320" />
            <p>@Master.DrawingName</p>
        </figure>
    </div>
    <div class="mian-column">
        <form name="myform" id="myform">
            <dl>
                <dt><i>*</i>原型编号:</dt>
                <dd>
                   @Master.DrawingCode
                </dd>
            </dl>
            <dl>
                <dt><i>*</i>原型名称:</dt>
                <dd>
                    @Master.DrawingName
                </dd>
            </dl>
            <dl>
                <dt><i>*</i>原型dwg文件:</dt>
                <dd>
                    @foreach (CadDrawingDWG Dwg in ViewBag.Dwgs)
                    {
                        <span class="upfile">
                            <img src="@Dwg.DWGPath" />
                        </span>
                    }

                </dd>
            </dl>
            <dl>
                <dt><i>*</i>使用范围:</dt>
                <dd style="width:500px;">
                    <span style="display:block;padding-top:5px;line-height:35px;">
                        @if (Master.Scope == 1)
                        {
                            <span class="online-checkbox">
                                <label>集团</label>
                            </span>
                        }


                        @foreach (CadDrawingByArea Area in ViewBag.ByAreas)
                        {
                            <span class="online-checkbox">
                                <label>@Area.AreaName</label>
                            </span>
                        }
                    </span>

                </dd>
            </dl>
            <dl>
                <dt><i>*</i>厨房类型：</dt>
                <dd>
                     @Kitchen.KitchenTypeName
                </dd>
            </dl>
            <dl>
                <dt><i>*</i>门窗位置：</dt>
                <dd>
                   @Kitchen.KitchenPositionName
                </dd>
            </dl>
            <dl>
                <dt><i>*</i>模块类型：</dt>
                <dd>
                    @if (Master.DynamicType == 1)
                    {
                        <span class="online-checkbox">
                            <label for="radio_dynamic_module">动态模型</label>
                        </span>
                    }
                    else
                    {
                        <span class="online-checkbox">

                            <label for="radio_static_module">静态模型</label>
                        </span>
                    }
                </dd>
            </dl>

            <dl class="dynamic_module">
                <dt><i>*</i>是否包含气道：</dt>
                <dd>
                    @{
                        string IsAirduct = Kitchen.KitchenIsAirduct == 1 ? "是" : "否";
                    }
                    @IsAirduct
                </dd>
            </dl>
@if (Master.DynamicType == 1)
                    {
            <dl class="dynamic_module">
                <dt><i>*</i>开间尺寸范围(mm)：</dt>
                <dd>
                    @Kitchen.KitchenOpenSizeMin
                    mm
                       -
                    @Kitchen.KitchenOpenSizeMax
                    mm
                </dd>
            </dl>
            <dl class="dynamic_module">
                <dt><i>*</i>进深尺寸范围(mm)：</dt>
                <dd>
                    @Kitchen.KitchenDepthsizeMin
                    mm
                    -
                    @Kitchen.KitchenDepthsizeMax
                    mm
                </dd>
            </dl>
                    }
else
{

    <dl class="dynamic_module">
        <dt><i>*</i>开间进深(mm)：</dt>
        <dd>
            @Kitchen.KitchenOpenSizeMin
            mm -
            @Kitchen.KitchenOpenSizeMax
            mm
        </dd>
    </dl>
    <dl class="dynamic_module">
        <dt><i>*</i>台盆尺寸：</dt>
        <dd>
            @Kitchen.KitchenBasinSizeName

        </dd>
    </dl>
    <dl class="dynamic_module">
        <dt><i>*</i>冰箱尺寸：</dt>
        <dd>
            @Kitchen.KitchenFridgSizeName
        </dd>
    </dl>
    <dl class="dynamic_module">
        <dt><i>*</i>灶台尺寸：</dt>
        <dd>
            @Kitchen.KitchenHearthSizeName

        </dd>
    </dl>
}

           
        </form>
        <div class="row" style="margin-bottom:20px;padding-left:15px;padding-right:30px;">
            <div class="col-md-6 col-sm-6">
                <a class="btn btn-sunac" id="btn_save" href="/Kitchen/Edit/@Master.Id">编辑</a>
            </div>
        </div>
    </div>
</div>